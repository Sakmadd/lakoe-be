generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  unpaid
  new_order
  ready_to_ship
  on_delivery
  done
  canceled
}

enum Role {
  seller
  admin
}

enum withDrawStatus {
  accepted
  rejected
  pending
}

model User {
  id       String @id @default(uuid())
  shop_id  String @unique
  name     String @unique
  role     Role   @default(seller)
  email    String
  password String

  Shop Shop @relation(fields: [shop_id], references: [id])

  @@map("users")
}

model Shop {
  id          String  @id @default(uuid())
  name        String?
  phone       String?
  description String?
  slogan      String?
  logo        String?
  balance     Float   @default(0)

  Bank     BankAccount?
  User     User?
  location Location[]
  Product  Product[]
  Withdraw Withdraw[]
  Invoices Invoices[]

  @@map("shops")
}

model Location {
  id          String  @id @default(uuid())
  shop_id     String
  name        String
  province    String
  city        String
  district    String
  subdistrict String
  address     String
  postal_code String
  longitude   String
  latitude    String
  is_main     Boolean @default(false)
  Shop        Shop?   @relation(fields: [shop_id], references: [id])

  @@map("locations")
}

model Product {
  id                       String                     @id @default(uuid())
  shop_id                  String
  category_id              String
  name                     String
  sku                      String
  price                    Float
  url_name                 String                     @unique
  description              String
  stock                    Int
  minimum_order            Int
  is_active                Boolean
  weight                   Float
  length                   Float
  width                    Float
  height                   Float
  created_at               DateTime                   @default(now())
  updated_at               DateTime                   @default(now())
  OrderItem                OrderItem[]
  Shop                     Shop                       @relation(fields: [shop_id], references: [id])
  Category                 Category                   @relation(fields: [category_id], references: [id])
  Variant                  Variant[]
  Images                   Image[]
  VariantOptionCombination VariantOptionCombination[]

  @@map("products")
}

model Image {
  id         String @id @default(uuid())
  product_id String

  alt     String?
  src     String
  product Product @relation(fields: [product_id], references: [id])

  @@map("images")
}

model Category {
  id        String     @id @default(uuid())
  parent_id String?
  label     String
  value     String
  Parent    Category?  @relation("CategoryToParent", fields: [parent_id], references: [id])
  Children  Category[] @relation("CategoryToParent")
  Product   Product[]

  @@map("categories")
}

model Variant {
  id            String          @id @default(uuid())
  name          String
  is_active     Boolean
  product_id    String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @default(now())
  Product       Product?        @relation(fields: [product_id], references: [id])
  VariantOption VariantOption[]

  @@map("variants")
}

model VariantOption {
  id        String   @id @default(uuid())
  name      String
  Variant   Variant? @relation(fields: [variantId], references: [id])
  variantId String?
  src       String?
  alt       String?

  @@map("variantOptions")
}

model VariantOptionCombination {
  id         String  @id @default(uuid())
  name       String
  is_active  Boolean @default(true)
  price      Float
  weight     Int
  sku        String
  stock      Int
  product_id String
  Product    Product @relation(fields: [product_id], references: [id])

  @@map("variantOptionCombination")
}

model Invoices {
  id             String         @id @default(uuid())
  recipient_id   String         @unique
  shop_id        String
  prices         Float
  service_charge Float
  invoice_number String
  Courier        Courier?
  Payment        Payment?
  Shop           Shop           @relation(fields: [shop_id], references: [id])
  Recipient      Recipient      @relation(fields: [recipient_id], references: [id])
  OrderHistory   OrderHistory[]

  @@map("invoices")
}

model TemplateMessage {
  id              String   @id @default(uuid())
  title           String
  contain_message String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("templateMessages")
}

model OrderHistory {
  id         String      @id @default(uuid())
  invoice_id String
  status     OrderStatus
  timestamp  DateTime    @default(now())

  Invoice Invoices @relation(fields: [invoice_id], references: [id])
}

model Courier {
  id                  String  @id @default(uuid())
  invoice_id          String  @unique
  order_id            String  @unique
  origin_area_id      String
  destination_area_id String
  price               Float
  courier_company     String
  courier_code        String
  courier_type        String
  tracking_id         String?
  waybill_id          String?

  order    Order     @relation(fields: [order_id], references: [id])
  Invoices Invoices? @relation(fields: [invoice_id], references: [id])

  @@map("couriers")
}

model Order {
  id           String     @id @default(uuid())
  recipient_id String     @unique
  total_price  Float
  created_at   DateTime   @default(now())
  updated_at   DateTime   @default(now())
  OrderItem    OrderItem?
  Payment      Payment?
  Courier      Courier?
  Recipient    Recipient  @relation(fields: [recipient_id], references: [id])

  @@map("orders")
}

model OrderItem {
  id                     String   @id @default(uuid())
  order_id               String   @unique
  product_id             String
  variant_combination_id String?
  quantity               Int
  Order                  Order?   @relation(fields: [order_id], references: [id])
  Product                Product? @relation(fields: [product_id], references: [id])

  @@map("orderItems")
}

model Recipient {
  id        String    @id @default(uuid())
  name      String
  email     String
  address   String
  phone     String
  district  String
  city      String
  longitude String
  latitude  String
  Order     Order?
  Invoices  Invoices?

  @@map("recipients")
}

model Payment {
  id             String   @id @default(uuid())
  order_id       String   @unique
  invoice_id     String   @unique
  type           String?
  url            String
  bank           String?
  amount         Float
  account_name   String?
  account_number String?
  status         String
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())
  Order          Order    @relation(fields: [order_id], references: [id])
  Invoice        Invoices @relation(fields: [invoice_id], references: [id])

  @@map("payments")
}

model BankAccount {
  id      String @id @default(uuid())
  name    String
  account String
  bank    String
  shop_id String @unique

  shop     Shop       @relation(fields: [shop_id], references: [id])
  Withdraw Withdraw[]

  @@map("bankAccounts")
}

model Withdraw {
  id              String         @id @default(uuid())
  bank_account_id String
  shop_id         String
  reference_no    String         @unique @default(uuid())
  amount          Float
  notes           String?
  status          withDrawStatus
  updated_at      DateTime       @default(now())
  created_at      DateTime       @default(now())
  BankAccount     BankAccount    @relation(fields: [bank_account_id], references: [id])
  Shop            Shop           @relation(fields: [shop_id], references: [id])

  @@map("withdraws")
}
